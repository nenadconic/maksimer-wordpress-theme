{
  "name": "maksimer-wordpress-theme",
  "author": "Maksimer",
  "description": "WordPress starter theme developed and maintained by Maksimer",
  "version": "3.2.0",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/maksimer/maksimer-wordpress-theme.git"
  },
  "devDependencies": {
    "@wordpress/scripts": "^6.1.0",
    "autoprefixer": "^9.7.3",
    "browserslist": "^4.7.2",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "imagemin-webpack-plugin": "^2.4.2",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "pump": "^3.0.0",
    "sass-loader": "^8.0.0"
  },
  "scripts": {
    "install:all": "npm install && composer install",
    "build": "wp-scripts build",
    "watch": "wp-scripts start",
    "lint:all": "composer run lint && npm run lint:scss && npm run lint:js",
    "lint:scss": "wp-scripts lint-style 'assets/**/*.scss'",
    "lint:js": "wp-scripts lint-js ./assets/**/*.js",
    "lint:php": "composer run lint"
  },
  "browserslist": [
    "> 1%",
    "ie >= 11",
    "last 1 Android versions",
    "last 1 ChromeAndroid versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 Edge versions",
    "last 2 Opera versions",
    "not op_mini all"
  ]
}
