{
  "name": "maksimer/maksimer-wordpress-theme",
  "description": "The starter theme for Maksimer AS",
  "type": "wordpress-theme",
  "authors": [
    {
      "name": "Maksimer",
      "email": "post@maksimer.no"
    }
  ],
  "repositories": {

    "wpackagist": {
        "type": "composer",
        "url": "https://wpackagist.org"
    },
    "maksimer": {
        "type": "composer",
        "url": "https://composer.maksimer.es"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2",
    "johnpbloch/wordpress": "^5.2.2"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "squizlabs/php_codesniffer": "^3.4",
    "phpcompatibility/phpcompatibility-wp": "^2.0",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
         "wp-content/mu-plugins/{$name}/": [
             "type:wordpress-muplugin"
         ],
         "wp-content/plugins/{$name}/": [
             "type:wordpress-plugin"
         ],
         "wp-content/themes/{$name}/": [
             "type:wordpress-theme"
         ]
   }
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=phpcs.xml.dist --colors --encoding=utf-8 -p `git ls-files --others --exclude-standard -c|grep \\.php`",
    "lint-fix": "./vendor/bin/phpcbf --standard=phpcs.xml.dist --colors --encoding=utf-8 -p `git ls-files --others --exclude-standard -c|grep \\.php`",
    "get-storm":"mdfind kind:application PhpStorm.app | while read line; do cd \"$line\" && find . -name inspect.sh -exec {} /Users/kristoffer/Projects/maksimer-wordpress-theme/ /Users/kristoffer/Projects/maksimer-wordpress-theme/docker/Composer/ComposerInspection.xml /Users/kristoffer/Projects/maksimer-wordpress-theme/target/results.xml -V1 \\;; done",
    "composer-inspect": "composer run get-storm ./ docker/Composer/ComposerInspection.xml target/results.xml -V1",
    "docker-composer-inspect": "docker run --rm -v $(pwd):/project -it bentolor/idea-cli-inspector ./inspect.sh /project /project/docker/Composer/ComposerInspection.xml /project/target/results.xml",
    "dci2": "docker run --rm -v $(pwd):/project --entrypoint=\"/bin/bash\" -w=\"/srv/idea-IC-183.5153.38/bin\" bentolor/idea-cli-inspector ./inspect.sh /project /project/docker/Composer/ComposerInspection.xml /project/lintresults -v2",
    "dci3":"docker run --rm -v $(pwd):/project bentolor/idea-cli-inspector -n",
  }
}
