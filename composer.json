{
  "name": "maksimer/maksimer-wordpress-theme",
  "description": "The starter theme for Maksimer AS",
  "type": "wordpress-theme",
  "authors": [
    {
      "name": "Maksimer",
      "email": "post@maksimer.no"
    }
  ],
  "repositories": {

    "wpackagist": {
        "type": "composer",
        "url": "https://wpackagist.org"
    },
    "maksimer": {
        "type": "composer",
        "url": "https://composer.maksimer.es"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2",
    "johnpbloch/wordpress": "^5.2.2"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "squizlabs/php_codesniffer": "^3.4",
    "phpcompatibility/phpcompatibility-wp": "^2.0",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
         "wp-content/mu-plugins/{$name}/": [
             "type:wordpress-muplugin"
         ],
         "wp-content/plugins/{$name}/": [
             "type:wordpress-plugin"
         ],
         "wp-content/themes/{$name}/": [
             "type:wordpress-theme"
         ]
   }
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=phpcs.xml.dist --colors --encoding=utf-8 -n -p `git ls-files | grep \\.php`",
    "lint-fix": "./vendor/bin/phpcbf --standard=phpcs.xml.dist --colors --encoding=utf-8 -n -p `git ls-files | grep \\.php`"
  }
}
